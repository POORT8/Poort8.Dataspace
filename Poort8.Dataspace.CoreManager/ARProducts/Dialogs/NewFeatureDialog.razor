@using Poort8.Dataspace.AuthorizationRegistry.Entities;
@implements IDialogContentComponent<Feature>

<FluentTextField Label="Identifier" @bind-Value="Content.FeatureId" Disabled=@(!string.IsNullOrEmpty(Content.FeatureId)) />
<FluentTextField Label="Name" @bind-Value="Content.Name" />
<FluentTextField Label="Description" @bind-Value="Content.Description" />

@code {
    [Parameter]
    public required Feature Content { get; set; }

    [CascadingParameter]
    public required FluentDialog Dialog { get; set; }

    private async Task SaveClicked()
    {
        await Dialog.CloseAsync(Content);
    }

    private async Task CancelClicked()
    {
        await Dialog.CancelAsync();
    }
}
