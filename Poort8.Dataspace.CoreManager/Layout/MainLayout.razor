@inherits LayoutComponentBase

<FluentDesignTheme Mode="DesignThemeModes.Light" CustomColor="visio" />
<FluentLayout>
    <FluentHeader>
        NoodleBar
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
        <FluentDialogProvider @rendermode="RenderMode.InteractiveServer" />
    </FluentStack>
    <FluentFooter>
        <div class="link1">
            <a href="https://www.poort8.nl" target="_blank">poort8.nl</a>
        </div>
        <FluentSpacer />
        <div class="link2">
            <a href="https://github.com/POORT8/Poort8.Dataspace.NoodleBar" target="_blank">GitHub</a>
        </div>
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
