<FluentLabel Typo="Typography.H1">Agreements</FluentLabel>

<FluentButton IconStart="@(new Icons.Regular.Size20.AddCircle())" Appearance="Appearance.Accent" OnClick="@(AddNewClicked)">New Agreement</FluentButton>

<FluentDataGrid Items="@StateContainer.CurrentOROrganization?.Agreements.AsQueryable()">
    <PropertyColumn Property="@(a => a.Type)" Sortable="true" />
    <PropertyColumn Property="@(a => a.Title)" Sortable="true" />
    <PropertyColumn Property="@(a => a.Status)" Sortable="true" />
    <PropertyColumn Title="Date of Signing" Format="dd-MM-yyyy" Property="@(a => a.DateOfSigning)" Sortable="false" />
    <PropertyColumn Title="Date of Expiry" Format="dd-MM-yyyy" Property="@(a => a.DateOfExpiry)" Sortable="false" />
    <TemplateColumn Title="Actions" Align="@Align.End">
        <FluentButton Title="Edit" IconEnd="@(new Icons.Regular.Size16.Edit())" OnClick="@(() => EditClicked(@context))" />
        <FluentButton Title="Delete" IconEnd="@(new Icons.Regular.Size16.Delete())" OnClick="@(() => DeleteClicked(@context))" />
    </TemplateColumn>
</FluentDataGrid>